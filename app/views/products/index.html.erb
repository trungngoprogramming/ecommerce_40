<div class="col-lg-9">
  <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <%= image_tag "http://placehold.it/900x350" %>
      </div>
    </div>
  </div>
</div>

<%= will_paginate @product %>

<ul class = "list-group list-group-flush">
  <% @product.each do |p| %>
    <div class="col-md-6 mt-20">
      <li class="list-group-item">
        <%= link_to image_tag(p.image), product_path(p) %>
      </li>
      <li class="list-group-item">
        <h3><%= t "product_name" %>: <%= link_to p.name, product_path(p) %></h3>
      </li>
      <li class="list-group-item"><%= t "price" %>: <%= product_unit p.price, "$" %></li>
      <li class="list-group-item"><%= t "rate" %>: <%= product_unit p.rate, "star" %></li>
      <li class="list-group-item">

        <%= link_to t("buy") %> |
        <%= link_to t("add_to_cart") %>
      </li>
    </div>
  <% end %>
</ul>

<%= will_paginate @product %>
